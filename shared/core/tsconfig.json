{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@gerp/ui": ["../ui/src"],
      "@gerp/ui/*": ["../ui/src/*"],
      "@gerp/core": ["src"],
      "@gerp/core/*": ["src/*"]
    }
  },
  "include": ["src"]
}
